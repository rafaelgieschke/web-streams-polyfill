{
  "name": "web-streams-polyfill",
  "version": "1.3.2",
  "description": "Web Streams, based on the WHATWG spec reference implementation",
  "main": "dist/polyfill.js",
  "browser": "dist/polyfill.min.js",
  "module": "dist/polyfill.es.js",
  "jsnext:main": "dist/polyfill.es.js",
  "types": "types/polyfill.d.ts",
  "scripts": {
    "test": "npm run lint && npm run wpt",
    "bundle": "rollup -c",
    "bundle:no-min": "rollup -c rollup.config.dev.js",
    "bundle:min": "rollup -c rollup.config.prod.js",
    "bundle:wpt": "rollup -c rollup.config.wpt.js",
    "wpt": "node --expose_gc run-web-platform-tests-on-bundle.js",
    "sync-wpt": "git submodule update --init",
    "lint": "eslint \"src/**/*.js\"",
    "coverage": "nyc --reporter=lcov npm test && opener coverage/lcov-report/index.html",
    "build": "npm run bundle",
    "prebuild": "git submodule update --init",
    "prepublish": "npm run build"
  },
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creatorrr/web-stream-polyfill.git"
  },
  "keywords": [
    "streams",
    "whatwg",
    "polyfill"
  ],
  "author": "Diwank Singh <diwank.singh@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/creatorrr/web-streams-polyfill/issues"
  },
  "homepage": "https://github.com/creatorrr/web-streams-polyfill#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^3.2.2",
    "minimatch": "^3.0.4",
    "npm-run-all": "^2.3.0",
    "nyc": "^11.2.1",
    "opener": "^1.4.2",
    "rollup": "^0.53.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-strip": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "wpt-runner": "^2.2.0",
    "yarn": "^0.17.0"
  },
  "dependencies": {
    "better-assert": "^1.0.2",
    "debug": "^3.1.0"
  }
}
